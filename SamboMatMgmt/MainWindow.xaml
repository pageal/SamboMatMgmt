<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SamboMatMgmt"
        xmlns:Properties="clr-namespace:SamboMatMgmt.Properties" x:Class="SamboMatMgmt.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="1200">
        <Grid x:Name="ScoreGrid" Margin="10,10,10,10" HorizontalAlignment="Stretch" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Rectangle Grid.Column="0" Fill="#FFD31A1A" HorizontalAlignment="Stretch"/>
            <Rectangle Grid.Column="1" Fill="Black"/>
            <Rectangle Grid.Column="2" Fill="#FF1414DC" HorizontalAlignment="Stretch"/>
            <Button Grid.Column="1" Margin="10,10,10,10" VerticalAlignment="Top" HorizontalAlignment="Center" Height="80" Width="80" IsDefault="True" Name="buttonFight" Command="{Binding FightCommand}" CommandParameter="{Binding ElementName=ButtonImage, Path=Source}" >
                <Image Name="ButtonImage">
                    <Image.Style>
                        <Style TargetType="{x:Type Image}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding isCounting}" Value="True">
                                    <Setter Property="Source" Value="stop.jpg" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding isCounting}" Value="False">
                                    <Setter Property="Source" Value="start.jpg" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Image.Style>
                </Image>
            </Button>
            <ComboBox x:Name="BattleTime" Grid.Column="1" HorizontalAlignment="Center" Margin="10,110,10,10" IsEditable="True" VerticalAlignment="Top" Width="100" FontSize="16" FontWeight="Bold" LostFocus="FightTime_LostFocus"/>
            <Label x:Name="lblFightTime" Grid.Column="1" Content="Fight Time:" FontSize="30" HorizontalAlignment="Center" Margin="10,160,0,10" VerticalAlignment="Top" Foreground="#FFF7F6F6" FontFamily="Arial Black"/>
            <Label x:Name="lblTime" Grid.Column="1" Content="{Binding CurrentTime}" FontSize="96" HorizontalAlignment="Center" Margin="10,220,0,10" VerticalAlignment="Top" Foreground="#FFF7F6F6" FontFamily="Arial Black" FontWeight="Bold" />
            <Label x:Name="labelCompetitorRed" Content="Competitor:" Grid.Column="0" Margin="10,10,10,10" VerticalAlignment="Top" HorizontalAlignment="Left" FontSize="16" FontFamily="Arial" FontWeight="Bold"/>
            <ComboBox x:Name="ComboCompetitorRed" Grid.Column="0" Margin="150,10,10,10" VerticalAlignment="Top" HorizontalAlignment="Stretch" IsEditable="True" FontWeight="Bold" FontSize="16" FontFamily="Arial" SelectionChanged="ComboCompetitorRed_SelectionChanged" LostFocus="ComboCompetitorRed_LostFocus"/>
            <Label x:Name="labelCompetitorBlue" Content="Competitor:" Grid.Column="2" Margin="10,10,10,10" VerticalAlignment="Top" HorizontalAlignment="Left" FontWeight="Bold" FontSize="16" FontFamily="Arial"/>
            <ComboBox x:Name="ComboCompetitorBlue" Grid.Column="2" Margin="150,10,10,10" VerticalAlignment="Top" HorizontalAlignment="Stretch" IsEditable="True" FontWeight="Bold" FontSize="16" FontFamily="Arial" LostFocus="ComboCompetitorBlue_LostFocus"/>
            <StackPanel Grid.Column="0">
                <GroupBox x:Name="GroupScoreRed" Grid.Column="0" Header="Score" HorizontalAlignment="Stretch" Margin="10,80,10,10" VerticalAlignment="Top" Foreground="#FF780C0C" FontSize="26.667" FontWeight="Bold" BorderBrush="#FF9B2B0B">
                    <GroupBox.Effect>
                        <DropShadowEffect Color="#FFD12222" BlurRadius="10" ShadowDepth="10"/>
                    </GroupBox.Effect>
                    <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Bottom">
                        <Label x:Name="ScoreRed" Content="{Binding ScoreRed}" FontSize="120" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Top" Foreground="#FFF7F6F6" FontFamily="Arial Black" FontWeight="Bold" />
                        <Grid Margin="10,10,10,10" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Grid.ColumnSpan="3">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition  Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition />
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBox x:Name="textBoxRedPlus1" Grid.Column="0" HorizontalAlignment="Left" FontSize="16"  Margin="10,10,10,10" TextWrapping="NoWrap" Text="1" VerticalAlignment="Top" Width="50"/>
                            <Button x:Name="buttonRedPlus1" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="50" Height="50" Margin="10,40,10,0" Click="OnRedPlus1">
                                <StackPanel>
                                    <Image Source="plus.jpg"/>
                                </StackPanel>
                            </Button>
                            <TextBox x:Name="textBoxRedPlus2" Grid.Column="1" HorizontalAlignment="Left" FontSize="16"  Margin="10,10,0,0" TextWrapping="NoWrap" Text="2" VerticalAlignment="Top" Width="50"/>
                            <Button x:Name="buttonRedPlus2" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="50" Height="50" Margin="10,40,10,0" Click="OnRedScorePlus2">
                                <StackPanel>
                                    <Image Source="plus.jpg"/>
                                </StackPanel>
                            </Button>
                            <TextBox x:Name="textBoxRedPlus4" Grid.Column="2" HorizontalAlignment="Left" FontSize="16"  Margin="10,10,0,0" TextWrapping="NoWrap" Text="4" VerticalAlignment="Top" Width="50"/>
                            <Button x:Name="buttonRedPlus4" Grid.Column="2" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="50" Height="50" Margin="10,40,10,0" Click="OnRedScorePlus4">
                                <StackPanel>
                                    <Image Source="plus.jpg"/>
                                </StackPanel>
                            </Button>
                            <TextBox x:Name="textBoxRedMinus1" Grid.Column="4" HorizontalAlignment="Left" FontSize="16"  Margin="10,10,0,0" TextWrapping="NoWrap" Text="1" VerticalAlignment="Top" Width="50"/>
                            <Button x:Name="buttonRedMinus1" Grid.Column="4" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="50" Height="50" Margin="10,40,10,0" Click="OnRedScoreMinus1">
                                <StackPanel>
                                    <Image Source="minus.jpg"/>
                                </StackPanel>
                            </Button>
                            <TextBox x:Name="textBoxRedReset" Grid.Column="5" HorizontalAlignment="Left" FontSize="16"  Margin="10,10,0,0" TextWrapping="NoWrap" Text="0" VerticalAlignment="Top" Width="50"/>
                            <Button x:Name="buttonRedReset" Grid.Column="5" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="50" Height="50" Margin="10,40,10,0" ToolTip="Reset" Click="OnRedScoreReset">
                                <StackPanel>
                                    <Image Source="reset.jpg"/>
                                </StackPanel>
                            </Button>
                        </Grid>
                    </StackPanel>
                </GroupBox>
                <GroupBox x:Name="SpecialActionsRed" Grid.Column="0" Header="Special Actions" HorizontalAlignment="Stretch" Margin="10,0,10,10" VerticalAlignment="Top" Foreground="#FF780C0C" FontSize="26.667" FontWeight="Bold" BorderBrush="#FF9B2B0B">
                    <GroupBox.Effect>
                        <DropShadowEffect Color="#FFD12222" BlurRadius="10" ShadowDepth="10"/>
                    </GroupBox.Effect>
                    <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Bottom">
                        <Grid Margin="10,10,10,10" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Grid.ColumnSpan="3">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition  Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition />
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                        </Grid>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
            <StackPanel Grid.Column="2">
                <GroupBox x:Name="GroupScoreBlue" Grid.Column="2" Header="Score" HorizontalAlignment="Stretch" Margin="10,80,10,10" VerticalAlignment="Top" Foreground="#FF0B186C" FontSize="26.667" FontWeight="Bold" BorderBrush="#FF151A95">
                    <GroupBox.Effect>
                        <DropShadowEffect Color="#FF163997" BlurRadius="10" ShadowDepth="10"/>
                    </GroupBox.Effect>
                    <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Bottom">
                        <Label x:Name="ScoreBlue" Content="{Binding ScoreBlue}" FontSize="120" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Top" Foreground="#FFF7F6F6" FontFamily="Arial Black" FontWeight="Bold" />
                        <Grid Margin="10,10,10,10" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Grid.ColumnSpan="3">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition  Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition />
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBox x:Name="textBoxBluePlus1" Grid.Column="0" HorizontalAlignment="Left" FontSize="16"  Margin="10,10,10,10" TextWrapping="NoWrap" Text="1" VerticalAlignment="Top" Width="50"/>
                            <Button x:Name="buttonBluePlus1" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="50" Height="50" Margin="10,40,10,0" Click="OnBluePlus1">
                                <StackPanel>
                                    <Image Source="plus.jpg"/>
                                </StackPanel>
                            </Button>
                            <TextBox x:Name="textBoxBluePlus2" Grid.Column="1" HorizontalAlignment="Left" FontSize="16"  Margin="10,10,0,0" TextWrapping="NoWrap" Text="2" VerticalAlignment="Top" Width="50"/>
                            <Button x:Name="buttonBluePlus2" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="50" Height="50" Margin="10,40,10,0" Click="OnBlueScorePlus2">
                                <StackPanel>
                                    <Image Source="plus.jpg"/>
                                </StackPanel>
                            </Button>
                            <TextBox x:Name="textBoxBluePlus4" Grid.Column="2" HorizontalAlignment="Left" FontSize="16"  Margin="10,10,0,0" TextWrapping="NoWrap" Text="4" VerticalAlignment="Top" Width="50"/>
                            <Button x:Name="buttonBluePlus4" Grid.Column="2" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="50" Height="50" Margin="10,40,10,0" Click="OnBlueScorePlus4">
                                <StackPanel>
                                    <Image Source="plus.jpg"/>
                                </StackPanel>
                            </Button>
                            <TextBox x:Name="textBoxBlueMinus1" Grid.Column="4" HorizontalAlignment="Left" FontSize="16"  Margin="10,10,0,0" TextWrapping="NoWrap" Text="1" VerticalAlignment="Top" Width="50"/>
                            <Button x:Name="buttonBlueMinus1" Grid.Column="4" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="50" Height="50" Margin="10,40,10,0" Click="OnBlueScoreMinus1">
                                <StackPanel>
                                    <Image Source="minus.jpg"/>
                                </StackPanel>
                            </Button>
                            <TextBox x:Name="textBoxBlueReset" Grid.Column="5" HorizontalAlignment="Left" FontSize="16"  Margin="10,10,0,0" TextWrapping="NoWrap" Text="0" VerticalAlignment="Top" Width="50"/>
                            <Button x:Name="buttonBlueReset" Grid.Column="5" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="50" Height="50" Margin="10,40,10,0" ToolTip="Reset" Click="OnBlueScoreReset">
                                <StackPanel>
                                    <Image Source="reset.jpg"/>
                                </StackPanel>
                            </Button>
                        </Grid>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </Grid>
</Window>
