<Window x:Class="SamboMatMgmt.ScoreDisplay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SamboMatMgmt"
        mc:Ignorable="d"
        Title="ScoreDisplay" Height="396.85" Width="798.425">
    <Grid>
        <Grid x:Name="ScoreGrid" Margin="10,10,10,10" HorizontalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Rectangle Grid.Column="0" Fill="#FFD31A1A" HorizontalAlignment="Stretch"/>
            <Rectangle Grid.Column="1" Fill="Black" HorizontalAlignment="Stretch"/>
            <Rectangle Grid.Column="2" Fill="#FF1414DC" HorizontalAlignment="Stretch"/>
            <Label x:Name="CompetitorRed" Grid.Column="0" Content="{Binding CompetitorRedName}" HorizontalAlignment="Center" Margin="10,10,10,10" VerticalAlignment="Top" FontSize="48" FontWeight="Bold" FontStyle="Italic"/>
            <Label x:Name="ScoreRed" Grid.Column="0" Content="{Binding ScoreRed}" FontSize="300" HorizontalAlignment="Center" Margin="0,50,0,0" VerticalAlignment="Center" Foreground="#FFF7F6F6" FontFamily="Arial Black" FontWeight="Bold" />
            <StackPanel Grid.Column="0" VerticalAlignment="Bottom">
                <Label x:Name="SpecialClockRed" Content="{Binding SpecialClockRed}" FontSize="96" HorizontalAlignment="Right" Margin="0,0,0,0"  Foreground="#FFF7F6F6" FontFamily="Arial" FontWeight="Bold" />
                <Label x:Name="SpecialActionRed" Content="{Binding SpecialActionRed}" FontSize="96" HorizontalAlignment="Right" Margin="0,0,0,0" Foreground="#FFF7F6F6" FontFamily="Arial" FontWeight="Bold" />
            </StackPanel>

            <StackPanel Grid.Column="1" VerticalAlignment="Stretch">
                <Label x:Name="lblWeight" Content="{Binding Weight}" FontSize="72" HorizontalAlignment="Center" Margin="10,10,0,10" VerticalAlignment="Top" Foreground="#FFF7F6F6" FontFamily="Arial Black" FontWeight="Bold" />
                <Label x:Name="lblTime" Content="{Binding FightClock}" FontSize="150" HorizontalAlignment="Center" Margin="10,10,0,10" VerticalAlignment="Center" Foreground="#FFF7F6F6" FontFamily="Arial Black" FontWeight="Bold" />
            </StackPanel>

            <Label x:Name="CompetitorBlue" Grid.Column="2" Content="{Binding CompetitorBlueName}" HorizontalAlignment="Center" Margin="10,10,10,10" VerticalAlignment="Top" FontSize="48" FontWeight="Bold" FontStyle="Italic"/>
            <Label x:Name="ScoreBlue" Grid.Column="2" Content="{Binding ScoreBlue}" FontSize="300" HorizontalAlignment="Center" Margin="0,50,0,0" VerticalAlignment="Center" Foreground="#FFF7F6F6" FontFamily="Arial Black" FontWeight="Bold" />
            <StackPanel Grid.Column="2" VerticalAlignment="Bottom">
                <Label x:Name="SpecialClockBlue" Content="{Binding SpecialClockBlue}" HorizontalAlignment="Left" FontSize="96" Margin="0,0,0,0" FontFamily="Arial" FontWeight="Bold" Foreground="#FFF7F6F6"/>
                <Label x:Name="SpecialActionBlue" Content="{Binding SpecialActionBlue}" HorizontalAlignment="Left" FontSize="96" Margin="0,0,0,0" FontFamily="Arial" FontWeight="Bold" Foreground="#FFF7F6F6"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
